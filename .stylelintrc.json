{
  "extends": ["stylelint-config-standard-scss"],
  "plugins": ["stylelint-order"],
  "rules": {
    "string-quotes": "single",
    "scss/dollar-variable-pattern": "^[a-z-]+__[a-z0-9-]*$",
    "order/order": ["custom-properties", "declarations", "at-rules", "rules"],
    "order/properties-alphabetical-order": true,
    "comment-no-empty": true,
    "color-no-invalid-hex": true,
    "block-no-empty": true,
    "at-rule-empty-line-before": ["always", { "except": ["blockless-after-same-name-blockless", "first-nested"], "ignoreAtRules": ["else"] }],
    "declaration-empty-line-before": ["always", {"except": ["after-declaration", "first-nested"]}],
    "no-duplicate-selectors": true,
    "declaration-block-no-duplicate-properties": true,
    "indentation": "tab",
    "declaration-colon-newline-after": "always-multi-line"
  }
}
